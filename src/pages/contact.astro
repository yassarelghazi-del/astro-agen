---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="تواصل معنا | وكالة برمجة">
    <Navbar />
    
    <main class="py-20 bg-gray-50">
        <div class="container mx-auto px-4">
            <h1 class="text-4xl font-bold text-center mb-16 text-gray-900">تواصل معنا</h1>
            
            <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-lg overflow-hidden flex flex-col md:flex-row rtl:flex-row-reverse">
                <!-- Info Side -->
                <div class="bg-blue-600 text-white p-12 md:w-1/3">
                    <h3 class="text-2xl font-bold mb-6">معلومات الاتصال</h3>
                    <div class="space-y-6">
                        <div>
                            <p class="text-blue-200 text-sm mb-1">البريد الإلكتروني</p>
                            <p class="font-medium">contact@agency.com</p>
                        </div>
                        <div>
                            <p class="text-blue-200 text-sm mb-1">الهاتف</p>
                            <p class="font-medium" dir="ltr">+966 50 000 0000</p>
                        </div>
                        <div>
                            <p class="text-blue-200 text-sm mb-1">العنوان</p>
                            <p class="font-medium">الرياض، المملكة العربية السعودية</p>
                        </div>
                    </div>
                </div>

                <!-- Form Side -->
                <div class="p-12 md:w-2/3">
                    <form class="space-y-6">
                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">الاسم</label>
                                <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">البريد الإلكتروني</label>
                                <input type="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none" />
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">الموضوع</label>
                            <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">الرسالة</label>
                            <textarea rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none"></textarea>
                        </div>
                        <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition font-bold">
                            إرسال الرسالة
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <Footer />
</Layout>
